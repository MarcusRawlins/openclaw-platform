generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id             String      @id @default(cuid())
  type           ContactType @default(LEAD)
  firstName      String
  lastName       String
  email          String      @unique
  phone          String?
  partnerName    String?
  partnerEmail   String?
  source         String?
  instagram      String?
  notes          String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

enum ContactType {
  LEAD
  CLIENT
  VENDOR
  OTHER
}
